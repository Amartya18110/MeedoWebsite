@{
    Layout = "_ConfigurePlugin";
}

@model ConfigurationModel
@using Nop.Plugin.Payments.Instamojo.Models;
<form asp-controller="PaymentInstamojo" asp-action="Configure" method="post">
    <table class="adminContent">
        <tr>
        <tr>
            <td class="adminTitle">
                <nop-label asp-for="AuthToken" />
            </td>
            <td class="adminData">
                <nop-editor asp-for="AuthToken" />
                <span asp-validation-for="AuthToken"></span>
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                <nop-label asp-for="ApiKey" />
            </td>
            <td class="adminData">
                <nop-editor asp-for="ApiKey" />
                <span asp-validation-for="ApiKey"></span>
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                <nop-label asp-for="EndPoint" />
            </td>
            <td class="adminData">
                <nop-editor asp-for="EndPoint" />
                <span asp-validation-for="EndPoint"></span>
            </td>
        </tr>        
        <tr>
            <td class="adminTitle">
                <nop-label asp-for="WebHookUrl" />
            </td>
            <td class="adminData">
                <nop-editor asp-for="WebHookUrl" />
                <span asp-validation-for="WebHookUrl"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2" width="100%">
                <button type="submit" name="save" value="save" class="t-button">
                    Save
                </button>
            </td>
        </tr>
    </table>
</form>    